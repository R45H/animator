block vars

doctype html
html(lang="ru")
	head
		block head
			include ../partials/head

		title #{page.title} | #{global[0].name}
	body

		.wrapper(class= page.color ? 'wrapper_color_' + page.color : '')
			include ../partials/header

			main.main
				.section
					.container
						block content

					.main__footer-spacer

			include ../partials/footer

		// END OF VISIBLE CONTENT
		include ../partials/aside
		include ../partials/modal