block vars

doctype html
html(lang="ru")
	head
		block head
			include ../partials/head

		title #{page.title} | #{global[0].name}
	body

		.wrapper(
			class= page.isHome ? 'wrapper_home' : ''
			class= page.color ? 'wrapper_color_' + page.color : ''
		)
			include ../partials/header

			main.main
				block content

			include ../partials/footer

		// END OF VISIBLE CONTENT
		include ../partials/modal