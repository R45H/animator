include global
include svg

mixin banner(data)
	- data = data || {}

	+g-tag(data && (data.link || data.fancybox) ? 'a' : '')(
		class='banner'
		class= attributes.class
		class= data.fancybox ? 'fancybox' : ''
		href= data.fancybox ? data.img : data.link
		data-fancybox= data.fancybox ? 'group-' + ('BannerImage') : null
		data-caption= data.fancybox && data.title ? data.title : null
	)
		.banner__img(
			style= data && data.img ? 'background-image: url(' + data.img + ');' : ''
			role='img'
			aria-label= data.title || 'Image'
			title= data.title || 'Image'
		)

		if data.text
			.banner__text= data.text
				+svg('arrow-right', 'banner__icon')