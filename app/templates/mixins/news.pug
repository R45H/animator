include svg

mixin tag(tag)
	case tag
		when 'a': a(class= attributes.class href= attributes.href): block
		default: div(class= attributes.class): block

mixin news(data)

	+tag(data.link ? 'a' : '')(
		class= data.date ? 'news news_hidden-date' : 'news'
		class= attributes.class
		href= data.link
	)

		if data.img
			.news__img(
				style='background-image: url(' + data.img + ');'
				role='img'
				aria-label= data.imgDesc
				title= data.imgDesc
			)

		if data.icon
			+svg(data.icon, 'news__icon')

		h3.title.title_sm.news__title= data.title

		if data.date
			.news__date
				+svg('calendar', 'news__date-img')
				span.news__date-text= data.date

		.text.news__text!= data.text

		if attributes.class == 'news_arrow'
			.news__arrow
				+svg('arrow-down', 'news__arrow-icon')