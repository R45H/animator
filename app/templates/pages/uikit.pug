	.row.main__separator
		.col-3
			+select(select)
		.col-3
			+select(select, {
				wide: true
			})

	.row.main__separator
		.col-2
			+social(social)

	.row.main__separator
		.col-10.offset-sm-1.main__space-col
			+news(news[0])(class='news_arrow')
		.col-10.offset-sm-1
			+news(news[1])

	.row.main__separator
		.col-4
			+link-arrow({
				href: '#'
			}) .link-arrow
		.col-4
			+link-arrow({
				href: '#',
				dir: 'left'
			}) .link-arrow.link-arrow_left
		.col-4
			+link-arrow({
				href: '#',
				disabled: true
			}) .link-arrow.link-arrow_disabled

	.row.main__separator
		.col-8
			a.link-line(href='#') .link-line

	.row.main__separator
		.col-6
			+logo()
